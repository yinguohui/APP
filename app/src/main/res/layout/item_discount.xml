<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:coupon="http://schemas.android.com/apk/res/com.example.ygh.app"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.example.ygh.app.pro.mine.view.views.CouponBgView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:background="#47BDBD"
        android:gravity="center_vertical"
        coupon:horizontal_style="circle"
        coupon:vertical_style="triangle">
        <LinearLayout
            android:id="@+id/ll_discount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/discount_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:text="顺旺基优惠券"/>
                <TextView
                    android:id="@+id/discount_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_alignParentRight="true"
                    android:text="积分"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/discount_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FC4A36"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:text="全场五折优惠"/>
            <TextView
                android:id="@+id/discount_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/discount_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:textSize="15sp"
                android:text="有效期：2016-07-09至2016-07-20"/>
        </LinearLayout>
        <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginRight="20dp"-->
        <!--android:src="@drawable/app_logo"-->
        <!--android:layout_gravity="center"/>-->
    </com.example.ygh.app.pro.mine.view.views.CouponBgView>
</LinearLayout>